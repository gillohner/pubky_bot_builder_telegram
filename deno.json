{
  "imports": {
    "grammy": "https://deno.land/x/grammy@v1.38.2/mod.ts"
  },
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-env --allow-run --allow-import=deno.land,cdn.skypack.dev,jsr.io --env-file=.env.local src/main.ts",
    "serve": "WEBHOOK=1 deno run --allow-net --allow-env --allow-run --allow-import=deno.land,cdn.skypack.dev,jsr.io --env-file=.env.local src/main.ts",
    "test": "deno test --allow-env --allow-read --allow-run --allow-import=deno.land,cdn.skypack.dev,jsr.io"
  },
  "permissions": {
    "dev": {
      "run": true,
      "net": ["api.telegram.org"]
    }
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "lock": true,
  "fmt": { "useTabs": true, "lineWidth": 100 }
}
