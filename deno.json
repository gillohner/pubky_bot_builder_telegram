{
	"imports": {
		"grammy": "https://deno.land/x/grammy@v1.38.2/mod.ts",
		"@core/": "./src/core/",
		"@middleware/": "./src/middleware/",
		"@adapters/": "./src/adapters/",
		"@schema/": "./src/types/",
		"@sdk/": "./packages/sdk/",
		"sqlite": "https://deno.land/x/sqlite@v3.9.1/mod.ts",
		"@synonymdev/pubky": "npm:@synonymdev/pubky@0.5.4"
	},
	"tasks": {
		"dev": "deno run --watch --allow-net --allow-env --allow-run --allow-read=./packages,./src,./bot.sqlite,./bot.sqlite-journal,./bot.sqlite-wal,$HOME/Library/Caches/deno --allow-write=./bot.sqlite,./bot.sqlite-journal,./bot.sqlite-wal --allow-import=deno.land,cdn.skypack.dev,jsr.io,registry.npmjs.org,cdn.npmjs.org --env-file=.env.local src/main.ts",
		"serve": "WEBHOOK=1 deno run --allow-net --allow-env --allow-run --allow-read=./packages,./src,./bot.sqlite,./bot.sqlite-journal,./bot.sqlite-wal,$HOME/Library/Caches/deno --allow-write=./bot.sqlite,./bot.sqlite-journal,./bot.sqlite-wal --allow-import=deno.land,cdn.skypack.dev,jsr.io,registry.npmjs.org,cdn.npmjs.org --env-file=.env.local src/main.ts",
		"test": "deno test --allow-env --allow-read=./packages,./src,./bot.sqlite,./bot.sqlite-journal,./bot.sqlite-wal --allow-run --allow-import=deno.land,cdn.skypack.dev,jsr.io,registry.npmjs.org,cdn.npmjs.org",
		"lint": "deno lint",
		"fmt": "deno fmt"
	},
	"permissions": {
		"dev": {
			"run": true,
			"net": ["api.telegram.org"]
		}
	},
	"lint": {
		"rules": {
			"tags": ["recommended"]
		}
	},
	"lock": true,
	"fmt": { "useTabs": true, "lineWidth": 100 }
}
