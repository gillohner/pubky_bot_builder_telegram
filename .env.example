# Required
BOT_TOKEN=your_telegram_bot_token_here

# Optional
NODE_ENV=development
DEBUG=0
LOG_MIN_LEVEL=info
LOG_PRETTY=0
DEFAULT_TEMPLATE_ID=default
ENABLE_DELETE_PINNED=0
DEFAULT_MESSAGE_TTL=0

# Admin & permissions
# -------------------------------------------------------------------
# Comma-separated Telegram user IDs that are always admin (in any chat).
# These users can use /setconfig and /updateconfig everywhere.
BOT_ADMIN_IDS=

# Lock DM config: 1 = only BOT_ADMIN_IDS can /setconfig in DMs,
# 0 = any DM user can change their own config (default)
LOCK_DM_CONFIG=0

# Set to 1 to use webhook mode instead of polling (suggested for production)
WEBHOOK=0

# Pubky Writer Configuration (for services that publish to Pubky)
# -------------------------------------------------------------------
# Path to the pkarr recovery file containing the community keypair
# Generate this using Pubky Ring or the Pubky CLI
PUBKY_RECOVERY_FILE=./secrets/community.pkarr

# Passphrase to decrypt the recovery file
PUBKY_PASSPHRASE=your_secure_passphrase_here

# Telegram group/channel ID where write requests are sent for approval
PUBKY_ADMIN_GROUP=-1001234567890

# How long pending writes wait for approval before expiring (seconds, default: 24h)
PUBKY_APPROVAL_TIMEOUT=86400
